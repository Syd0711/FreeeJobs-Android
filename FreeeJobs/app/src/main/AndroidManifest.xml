<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.freeejobs">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FreeeJobs">
        <activity
            android:name=".ui.LauncherActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.profile.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".ui.jobListing.MyJobsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.jobApplication.JobApplicationActivity"
            android:exported="false" />
        <activity
            android:name=".ui.jobListing.JobListing"
            android:exported="false" />
        <activity
            android:name=".ui.landingPage.LandingPage"
            android:exported="false" />
        <activity
            android:name=".ui.jobListing.ApplyJobActivity"
            android:exported="false" />
        <activity
            android:name=".ui.jobListing.JobApplicantsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.jobListing.ApplicantDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.jobListing.JobListingDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.postedJobListing.PostedJobActivity"
            android:exported="false" />
        <activity
            android:name=".ui.jobApplication.RatingsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true"
            android:label="@string/app_name">
        </activity>
    </application>

</manifest>